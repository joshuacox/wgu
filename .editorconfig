# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80

[*.{js,py}]
charset = utf-8

[*.md]
max_line_length = 0

[COMMIT_EDITMSG]
max_line_length = 0

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
